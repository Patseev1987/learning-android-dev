<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainFragment">
    <TextView
            android:id="@+id/title_main_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32sp"
            android:fontFamily="serif"
            android:layout_gravity="center|top"
            android:padding="16dp"
            android:text="@string/mainTitle"/>

    <Button
            android:id="@+id/add_ring"
            android:text="add ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="26sp"
            android:fontFamily="serif"
            android:backgroundTint="#8BE7C6"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    <Button
            android:id="@+id/find_ring"
            android:text="find ring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="26sp"
            android:fontFamily="serif"
            android:backgroundTint="#8BE7C6"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    <Button
            android:id="@+id/help"
            android:text="help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="26sp"
            android:fontFamily="serif"
            android:backgroundTint="#8BE7C6"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:gravity="center"/>


    <ImageView
            android:id="@+id/image_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:padding="24dp"
            app:srcCompat="@drawable/_26772_lamborgini_aventador_lambordzhini_aventador_sv_lambordzhini_urus_lamborghini_reventn_superkar_x750"/>
</LinearLayout>